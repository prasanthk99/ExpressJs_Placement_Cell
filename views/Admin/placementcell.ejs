<link rel="stylesheet" href="/css/admin.css">

<h1>Placement-Cell</h1>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add Interviews
</button>


<table class="table">
    <thead>
      <tr>
        <th scope="col">S.NO</th>
        <th scope="col">Student Name</th>
        <th scope="col">Company Name</th>
        <th scope="col">Position</th>
        <th scope="col">Location</th>
        <th scope="col">Salary</th>
        <th scope="col">Application End</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
        <%
        if(interviewList.length!=0){
            var i=1;
            interviewList.forEach(function(data){
            %>
        <tr>
            <th scope="row"><%=i; %></th>
            <td><%=data.student %></td>
            <td><%=data.company %></td>
            <td><%=data.position %></td>
            <td><%=data.location %></td>
            <td><%=data.salary %>LPA</td>
            <td><%=data.applicationenddate.toLocaleDateString() %></td>
            <td><a href="/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/admin/delete/<%=data.id%>">Delete</a></td>
            <!-- <td>
                <form method="POST" action="/admin/delete/<%=data.id%>">
                    <a href="#">Delete</a>
                </form>    
            </td> -->
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Interview</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="Placement-form" action="/admin/addInterview" method="post">
                    <div class="mb-3">
                        <label for="student" class="form-label">Assign Student <span class="required">*</span></label>
                        <select class="form-select" id="student" aria-label="Select student" name="student" required>
                            <option selected>Select Student</option>
                            <%
                            if(studentsData.length!=0){
                                studentsData.forEach(function(data){
                                %>
                                <option value=<%=data.studentName %>><%=data.studentName %></option>
                                <% }) %>
                            <% }%>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="companyname" class="form-label">Company Name <span class="required">*</span></label>
                        <input type="text" class="form-control" id="companyname" name="company" required>
                    </div>
                    <div class="mb-3">
                        <label for="jobposition" class="form-label">Job Position <span class="required">*</span></label>
                        <input type="text" class="form-control" id="jobposition" name="position" required>
                    </div>

                    <div class="mb-3">
                        <label for="joblocation" class="form-label">Location <span class="required">*</span></label>
                        <select class="form-select" id="joblocation" aria-label="Select Location" name="location" required>
                            <option selected>Select Location</option>
                            <option value="Chennai">Chennai</option>
                            <option value="Bengaluru">Bengaluru</option>
                            <option value="Hyderabad">Hyderabad</option>
                            <option value="Delhi">Delhi</option>
                            <option value="Remote">Remote</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="companysalary" class="form-label">Salary (LPA) <span class="required">*</span></label>
                        <input type="number" class="form-control" id="companysalary" name="salary" required>
                    </div>
                    <div class="mb-3">
                        <label for="applicationdate" class="form-label">Application Deadline <span class="required">*</span></label>
                        <input type="date" class="form-control" id="applicationdate" name="applicationenddate" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
            <!-- <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div> -->
        </div>
    </div>
</div>